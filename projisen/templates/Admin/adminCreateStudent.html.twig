{% extends 'base.html.twig' %}
{% block title %}Ajouter un étudiant{% endblock %}
{% block body %}
    <div class='container my-5'>
        <div class='shadow p-3 rounded mx-auto w-75'>
            <h2 class='fw-bold mx-auto text-center'>Ajouter un étudiant</h2><br>
            {{ form_start(studentForm, {'attr': {'novalidate' : 'novalidate'}}) }}
            <div class='row'>
                <div class='col-md-6'>{{ form_row(studentForm.first_name) }}</div>
                <div class='col-md-6'>{{ form_row(studentForm.last_name) }}</div>
            </div>
            {{ form_row(studentForm.username, {'attr':{'readonly':'true', 'required':'false','value':'Généré automatiquement'}}) }}
            {{ form_row(studentForm.password) }}
            <div class='row'>
                <div class='col-md-6'>{{ form_row(studentForm.graduation_year) }}</div>
                <div class='col-md-6'>{{ form_row(studentForm.id_professional_domain) }}</div>
            </div>
            {% do studentForm.is_main_student.setRendered() %}
            {% do studentForm.id_pair.setRendered() %}
            <div class='mt-3 d-grid gap-2 d-md-flex justify-content-md-end'>
                <button type='submit' class='btn btn-primary'>Ajouter</button>
            </div>
            {{ form_end(studentForm) }}
            <a href='{{ path('app.admin.studentsRead') }}' class='btn btn-primary'>Retour</a>
        </div>
    </div>
{% endblock %}